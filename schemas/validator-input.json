{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON schema for the input of GDI validator",
  "type": "object",
  "properties": {
    "files": {
      "type": "array",
      "description": "List of files for file content validation.",
      "items": {
        "type": "object",
        "required": ["path"],
        "properties": {
          "path": {
            "type": "string",
            "description": "File path inside the container, e.g. /mnt/input/data/..."
          }
        },
        "additionalProperties": false
      }
    },
    "paths": {
      "type": "array",
      "description": "List of file paths for file structure validation.",
      "items": {
        "type": "string"
      }
    },
    "config": {
      "type": "object",
      "description": "Optional validation-specific configuration."
    }
  },
  "oneOf": [
    { "required": ["files"], "not": { "required": ["paths"] } },
    { "required": ["paths"], "not": { "required": ["files"] } }
  ],
  "additionalProperties": false
}
